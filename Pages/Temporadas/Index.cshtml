@page
@model ReservaCabanasSite.Pages.Temporadas.IndexModel
@{
    ViewData["Title"] = "Temporadas";
}


<style>
.btn-custom {
    padding: 6px 12px;
    border-radius: 6px;
    border: none;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    transition: background 0.2s;
    font-size: 0.875rem;
}

.btn-primary-custom {
    background: #0097b2;
    color: #fff;
}

.btn-primary-custom:hover {
    background: #00798e;
    color: #fff;
}

.btn-danger {
    background-color: #00353e !important;
}

.btn-danger:hover {
    background-color: #c0392b !important;
}

.btn-info {
    background-color: #007186 !important;
}

.btn-info:hover {
    background-color: #2980b9 !important;
}

.btn-warning {
    background-color: #0097b2 !important;
}

.btn-warning:hover {
    background-color: #e67e22 !important;
}

.btn-success {
    background-color: #27ae60 !important;
    color: #fff !important;
}

.btn-success:hover {
    background-color: #229954 !important;
}

.estado-badge {
    padding: 4px 12px;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
}

.estado-activo {
    background: #d4edda;
    color: #155724;
}

.estado-inactivo {
    background: #f8d7da;
    color: #721c24;
}

.table tbody tr.inactiva {
    background-color: #ffe6e6;
}

.table tbody tr.inactiva:hover {
    background-color: #ffd6d6;
}
</style>

<h1>Temporadas</h1>
<a asp-page="Create" class="btn btn-primary-custom btn-custom mb-3">Nueva Temporada</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio por Persona</th>
            <th>Vigencia</th>
            <th>Activa</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var temporada in Model.Temporadas)
    {
        <tr class="@(temporada.Activa ? "" : "inactiva")">
            <td>@temporada.Nombre</td>
            <td>$@temporada.PrecioPorPersona.ToString("N2")</td>
            <td>@temporada.FechaDesde.ToString("dd/MM/yyyy") - @temporada.FechaHasta.ToString("dd/MM/yyyy")</td>
            <td>
                <span class="estado-badge @(temporada.Activa ? "estado-activo" : "estado-inactivo")">
                    @(temporada.Activa ? "Activa" : "Inactiva")
                </span>
            </td>
            <td>
                <a asp-page="Edit" asp-route-id="@temporada.Id" class="btn btn-warning btn-sm @(temporada.Activa ? "" : "disabled")">Editar</a>
                <a asp-page="Details" asp-route-id="@temporada.Id" class="btn btn-info btn-sm">Detalles</a>
                @if (temporada.Activa)
                {
                    <a asp-page="Inactivate" asp-route-id="@temporada.Id" class="btn btn-danger btn-sm">Inactivar</a>
                }
                else
                {
                    <form method="post" asp-page-handler="Activar" asp-route-id="@temporada.Id" style="display:inline">
                        <button type="submit" class="btn btn-success btn-sm">Activar</button>
                    </form>
                }
            </td>
        </tr>
    }
    </tbody>
</table> 