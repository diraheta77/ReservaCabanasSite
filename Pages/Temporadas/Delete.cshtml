@page
@model ReservaCabanasSite.Pages.Temporadas.DeleteModel
@{
    ViewData["Title"] = "Eliminar Temporada";
}

<h1>Eliminar Temporada</h1>
<div class="alert alert-danger">
    <strong>¿Estás seguro que deseas eliminar esta temporada?</strong>
</div>
<dl class="row">
    <dt class="col-sm-3">Nombre</dt>
    <dd class="col-sm-9">@Model.Temporada.Nombre</dd>
    <dt class="col-sm-3">Precio por Persona</dt>
    <dd class="col-sm-9">$@Model.Temporada.PrecioPorPersona</dd>
    <dt class="col-sm-3">Activa</dt>
    <dd class="col-sm-9">@(Model.Temporada.Activa ? "Sí" : "No")</dd>
</dl>
<form method="post">
    <input type="hidden" asp-for="Temporada.Id" />
    <button type="submit" class="btn btn-danger btn-custom">Inactivar</button>
    <a asp-page="Index" class="btn btn-secondary-custom btn-custom">Cancelar</a>
</form> 