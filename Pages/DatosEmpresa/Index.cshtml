@page
@model ReservaCabanasSite.Pages.DatosEmpresa.IndexModel
@{
    ViewData["Title"] = "Datos de la Empresa";
}

<style>
.form-container {
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 16px rgba(44,62,80,0.08);
    padding: 24px;
    margin: 20px 0;
}

.form-header {
    border-bottom: 2px solid #a67c52;
    padding-bottom: 16px;
    margin-bottom: 24px;
}

.form-title {
    font-size: 1.8rem;
    font-weight: bold;
    color: #5c4a45;
    margin-bottom: 8px;
}

.form-subtitle {
    color: #6c757d;
    font-size: 1rem;
}

.form-group {
    margin-bottom: 20px;
}

.form-label {
    font-size: 0.9rem;
    font-weight: 600;
    color: #5c4a45;
    margin-bottom: 6px;
    display: block;
}

.form-control {
    width: 100%;
    padding: 10px 12px;
    border: 1px solid #dee2e6;
    border-radius: 6px;
    font-size: 0.9rem;
    transition: border-color 0.2s;
}

.form-control:focus {
    outline: none;
    border-color: #a67c52;
    box-shadow: 0 0 0 2px rgba(166, 124, 82, 0.1);
}

.form-check {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-top: 8px;
}

.form-check-input {
    width: 18px;
    height: 18px;
    cursor: pointer;
}

.form-check-label {
    font-size: 0.9rem;
    color: #5c4a45;
    cursor: pointer;
}

.text-danger {
    color: #dc3545;
    font-size: 0.85rem;
    margin-top: 4px;
}

.btn-primary-custom {
    background: #0097b2;
    color: white;
    padding: 12px 24px;
    border: none;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s;
    font-size: 1rem;
}

.btn-primary-custom:hover {
    background: #00798e;
}

.btn-secondary-custom {
    background: #444444;
    color: white;
    padding: 12px 24px;
    border: none;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s;
    text-decoration: none;
    display: inline-block;
    font-size: 1rem;
}

.btn-secondary-custom:hover {
    background: #333333;
    color: white;
}

.form-actions {
    display: flex;
    gap: 12px;
    margin-top: 24px;
    padding-top: 16px;
    border-top: 1px solid #dee2e6;
}

.alert {
    padding: 12px 16px;
    border-radius: 6px;
    margin-bottom: 20px;
}

.alert-success {
    background: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
}

.form-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
}

.form-grid-full {
    grid-column: 1 / -1;
}

@@media (max-width: 768px) {
    .form-grid {
        grid-template-columns: 1fr;
    }
}
</style>

<div class="form-container">
    <div class="form-header">
        <h1 class="form-title">
            <i class="fa fa-building"></i>
            Datos de la Empresa
        </h1>
        <p class="form-subtitle">Configuraci칩n de informaci칩n empresarial para reportes</p>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            <i class="fa fa-check-circle"></i>
            @TempData["Success"]
        </div>
    }

    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="DatosEmpresa.Id" />
        <input type="hidden" asp-for="DatosEmpresa.FechaActualizacion" />
        <input type="hidden" asp-for="DatosEmpresa.RutaLogo" />

        <div class="form-grid">
            <div class="form-group form-grid-full">
                <label asp-for="DatosEmpresa.NombreEmpresa" class="form-label"></label>
                <input asp-for="DatosEmpresa.NombreEmpresa" class="form-control" />
                <span asp-validation-for="DatosEmpresa.NombreEmpresa" class="text-danger"></span>
            </div>

            <div class="form-group form-grid-full">
                <label asp-for="DatosEmpresa.Direccion" class="form-label"></label>
                <input asp-for="DatosEmpresa.Direccion" class="form-control" />
                <span asp-validation-for="DatosEmpresa.Direccion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DatosEmpresa.Ciudad" class="form-label"></label>
                <input asp-for="DatosEmpresa.Ciudad" class="form-control" />
                <span asp-validation-for="DatosEmpresa.Ciudad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DatosEmpresa.Provincia" class="form-label"></label>
                <input asp-for="DatosEmpresa.Provincia" class="form-control" />
                <span asp-validation-for="DatosEmpresa.Provincia" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DatosEmpresa.Pais" class="form-label"></label>
                <input asp-for="DatosEmpresa.Pais" class="form-control" />
                <span asp-validation-for="DatosEmpresa.Pais" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DatosEmpresa.Telefono" class="form-label"></label>
                <input asp-for="DatosEmpresa.Telefono" class="form-control" />
                <span asp-validation-for="DatosEmpresa.Telefono" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DatosEmpresa.Email" class="form-label"></label>
                <input asp-for="DatosEmpresa.Email" class="form-control" type="email" />
                <span asp-validation-for="DatosEmpresa.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DatosEmpresa.SitioWeb" class="form-label"></label>
                <input asp-for="DatosEmpresa.SitioWeb" class="form-control" />
                <span asp-validation-for="DatosEmpresa.SitioWeb" class="text-danger"></span>
            </div>

            <div class="form-group form-grid-full">
                <label class="form-label">Logo de la Empresa</label>
                @if (!string.IsNullOrEmpty(Model.DatosEmpresa.RutaLogo))
                {
                    <div style="margin-bottom: 12px;">
                        <img src="@Model.DatosEmpresa.RutaLogo" alt="Logo actual" style="max-width: 200px; max-height: 100px; border: 1px solid #dee2e6; border-radius: 4px; padding: 8px; background: white;" />
                        <p style="font-size: 0.85rem; color: #6c757d; margin-top: 4px;">Logo actual</p>
                    </div>
                }
                <input type="file" name="ArchivoLogo" accept="image/*" class="form-control" />
                <span asp-validation-for="ArchivoLogo" class="text-danger"></span>
                <small style="color: #6c757d; font-size: 0.85rem;">Formatos permitidos: JPG, PNG, GIF, SVG. Tama침o m치ximo: 5MB</small>
            </div>

            <div class="form-group form-grid-full">
                <div class="form-check">
                    <input asp-for="DatosEmpresa.MostrarEnReportes" class="form-check-input" />
                    <label asp-for="DatosEmpresa.MostrarEnReportes" class="form-check-label"></label>
                </div>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-primary-custom">
                <i class="fa fa-save"></i>
                Guardar Cambios
            </button>
            <a asp-page="/Index" class="btn-secondary-custom">
                <i class="fa fa-times"></i>
                Cancelar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
