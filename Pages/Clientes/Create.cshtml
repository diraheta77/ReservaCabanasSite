@page
@model ReservaCabanasSite.Pages.Clientes.CreateModel
@{
    ViewData["Title"] = "Nuevo Cliente";
}

<style>
.btn-custom {
    padding: 8px 22px;
    border-radius: 6px;
    border: none;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    transition: background 0.2s;
}
.btn-primary-custom {
    background: #a67c52;
    color: #fff;
}
.btn-primary-custom:hover {
    background: #8d6843;
    color: #fff;
}
.btn-secondary-custom {
    background: #5c4a45;
    color: #fff;
}
.btn-secondary-custom:hover {
    background: #4a3c38;
    color: #fff;
}
.form-card {
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 2px 16px rgba(44,62,80,0.08);
    padding: 32px;
    max-width: 600px;
    margin: 0 auto;
}
</style>

<h1>Nuevo Cliente</h1>

<div class="form-card">
<form method="post">
    <div class="form-group">
        <label asp-for="Cliente.Dni"></label>
        <input asp-for="Cliente.Dni" class="form-control" />
        <span asp-validation-for="Cliente.Dni" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cliente.Nombre"></label>
        <input asp-for="Cliente.Nombre" class="form-control" />
        <span asp-validation-for="Cliente.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cliente.Apellido"></label>
        <input asp-for="Cliente.Apellido" class="form-control" />
        <span asp-validation-for="Cliente.Apellido" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cliente.FechaNacimiento"></label>
        <input asp-for="Cliente.FechaNacimiento" class="form-control" type="date" />
        <span asp-validation-for="Cliente.FechaNacimiento" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cliente.Nacionalidad"></label>
        <input asp-for="Cliente.Nacionalidad" class="form-control" />
        <span asp-validation-for="Cliente.Nacionalidad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cliente.Direccion"></label>
        <input asp-for="Cliente.Direccion" class="form-control" />
        <span asp-validation-for="Cliente.Direccion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cliente.Ciudad"></label>
        <input asp-for="Cliente.Ciudad" class="form-control" />
        <span asp-validation-for="Cliente.Ciudad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cliente.Provincia"></label>
        <input asp-for="Cliente.Provincia" class="form-control" />
        <span asp-validation-for="Cliente.Provincia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cliente.Pais"></label>
        <input asp-for="Cliente.Pais" class="form-control" />
        <span asp-validation-for="Cliente.Pais" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cliente.Telefono"></label>
        <input asp-for="Cliente.Telefono" class="form-control" />
        <span asp-validation-for="Cliente.Telefono" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cliente.Email"></label>
        <input asp-for="Cliente.Email" class="form-control" />
        <span asp-validation-for="Cliente.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cliente.Observaciones"></label>
        <textarea asp-for="Cliente.Observaciones" class="form-control"></textarea>
        <span asp-validation-for="Cliente.Observaciones" class="text-danger"></span>
    </div>
    <div class="form-group" style="margin-top: 15px;">
        <input type="checkbox" id="tieneVehiculo" name="tieneVehiculo" class="form-check-input" style="width: 18px; height: 18px;" />
        <label for="tieneVehiculo" class="form-check-label" style="margin: 0; font-weight: 600; color: #5c4a45;">¿Tiene vehículo?</label>
    </div>
    <div id="vehiculoFields" style="display:none;">
        <div class="form-group">
            <label for="Patente">Patente</label>
            <input name="Patente" id="Patente" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Marca">Marca</label>
            <input name="Marca" id="Marca" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Modelo">Modelo</label>
            <input name="Modelo" id="Modelo" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Color">Color</label>
            <input name="Color" id="Color" class="form-control" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary-custom btn-custom">Guardar</button>
    <a asp-page="Index" class="btn btn-secondary-custom btn-custom">Cancelar</a>
</form>
</div>

@section Scripts {
    <script>
        document.getElementById('tieneVehiculo').addEventListener('change', function() {
            document.getElementById('vehiculoFields').style.display = this.checked ? 'block' : 'none';
        });
    </script>
}
