@page
@model ReservaCabanasSite.Pages.Usuarios.IndexModel
@{
    ViewData["Title"] = "Usuarios";
}

<style>
.btn-danger {
    background-color: #00353e !important;
}

.table tbody tr.inactivo {
    background-color: #ffe6e6;
}

.table tbody tr.inactivo:hover {
    background-color: #ffd6d6;
}
</style>

<div class="row">
    <div class="col-md-12">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="card-title">Gestión de Usuarios</h4>
                    <a asp-page="Create" class="btn btn-primary">
                        <i class="fa fa-plus"></i> Nuevo Usuario
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Usuario</th>
                                <th>Nombre Completo</th>
                                <th>Rol</th>
                                <th>Estado</th>
                                <th>Fecha Creación</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var usuario in Model.Usuarios)
                            {
                                <tr class="@(usuario.Activo ? "" : "inactivo")">
                                    <td>@usuario.Id</td>
                                    <td>@usuario.NombreUsuario</td>
                                    <td>@usuario.NombreCompleto</td>
                                    <td>
                                        <span class="badge @(usuario.Rol == "Administrador" ? "badge-primary" : "badge-info")">
                                            @usuario.Rol
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge @(usuario.Activo ? "badge-success" : "badge-danger")">
                                            @(usuario.Activo ? "Activo" : "Inactivo")
                                        </span>
                                    </td>
                                    <td>@usuario.FechaCreacion.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <a asp-page="./Details" asp-route-id="@usuario.Id" class="btn btn-sm btn-secondary" title="Ver detalles">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                        <a asp-page="./Edit" asp-route-id="@usuario.Id" class="btn btn-sm btn-info" title="Editar">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        @if (usuario.Id != Model.CurrentUserId)
                                        {
                                            <a asp-page="./Inactivate" asp-route-id="@usuario.Id"
                                               class="btn btn-sm @(usuario.Activo ? "btn-danger" : "btn-success")"
                                               title="@(usuario.Activo ? "Inactivar usuario" : "Activar usuario")">
                                                <i class="fa @(usuario.Activo ? "fa-ban" : "fa-check-circle")"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div> 