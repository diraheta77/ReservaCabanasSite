@page
@model ReservaCabanasSite.Pages.Usuarios.IndexModel
@{
    ViewData["Title"] = "Usuarios";
}

<style>
.btn-danger {
    background-color: #00353e !important;
}
</style>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="card-title">Gestión de Usuarios</h4>
                    <a asp-page="Create" class="btn btn-primary">
                        <i class="fa fa-plus"></i> Nuevo Usuario
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Usuario</th>
                                <th>Nombre Completo</th>
                                <th>Rol</th>
                                <th>Estado</th>
                                <th>Fecha Creación</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var usuario in Model.Usuarios)
                            {
                                <tr>
                                    <td>@usuario.Id</td>
                                    <td>@usuario.NombreUsuario</td>
                                    <td>@usuario.NombreCompleto</td>
                                    <td>
                                        <span class="badge @(usuario.Rol == "Administrador" ? "badge-primary" : "badge-info")">
                                            @usuario.Rol
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge @(usuario.Activo ? "badge-success" : "badge-danger")">
                                            @(usuario.Activo ? "Activo" : "Inactivo")
                                        </span>
                                    </td>
                                    <td>@usuario.FechaCreacion.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <a asp-page="./Edit" asp-route-id="@usuario.Id" class="btn btn-sm btn-info">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a asp-page="./Details" asp-route-id="@usuario.Id" class="btn btn-sm btn-secondary">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                        @if (usuario.Id != Model.CurrentUserId)
                                        {
                                            <a asp-page="./Delete" asp-route-id="@usuario.Id" class="btn btn-sm btn-danger">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div> 