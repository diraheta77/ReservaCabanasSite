@page
@model ReservaCabanasSite.Pages.Reportes.Cabana.MesesModel
@{
    ViewData["Title"] = "Reportes por Meses";
}

<div class="report-container" style="background: white; border-radius: 12px; box-shadow: 0 2px 16px rgba(44,62,80,0.08); padding: 24px; margin: 20px 0;">
    <div class="report-header" style="border-bottom: 2px solid #a67c52; padding-bottom: 16px; margin-bottom: 24px;">
        <h1 style="font-size: 1.8rem; font-weight: bold; color: #5c4a45; margin-bottom: 8px;">
            <i class="fa fa-calendar-o"></i>
            Reporte de Reservaciones por Meses
        </h1>
        <p style="color: #6c757d; font-size: 1rem;">Análisis mensual de reservaciones y tendencias</p>
    </div>

    <div style="text-align: center; padding: 40px; color: #6c757d;">
        <i class="fa fa-tools" style="font-size: 3rem; margin-bottom: 16px;"></i>
        <h3>En Construcción</h3>
        <p>Este reporte está siendo desarrollado.<br>
        Pronto estará disponible con análisis mensual y gráficos de tendencias.</p>
    </div>
</div>