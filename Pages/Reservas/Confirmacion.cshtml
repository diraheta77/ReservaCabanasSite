}

.detail-item:last-child {
    border-bottom: none;
    margin-bottom: 0;
}

.detail-label {
    font-weight: 600;
    color: #5c4a45;
}

.detail-value {
    color: #6c757d;
}

.actions-section {
    background: #fff;
    border: 2px solid #e9ecef;
    border-radius: 8px;
    padding: 24px;
    margin-bottom: 24px;
}

.actions-section h5 {
    color: #5c4a45;
    margin-bottom: 16px;
    font-weight: bold;
}

.btn-custom {
    padding: 12px 24px;
    border-radius: 6px;
    border: none;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
