@page
@model ReservaCabanasSite.Pages.Reservas.IndexModel
@{
    ViewData["Title"] = "Reservas";
}

<style>
.btn-custom {
    padding: 8px 22px;
    border-radius: 6px;
    border: none;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    transition: background 0.2s;
}
.btn-primary-custom {
    background: #a67c52;
    color: #fff;
}
.btn-primary-custom:hover {
    background: #8d6843;
    color: #fff;
}
.btn-secondary-custom {
    background: #5c4a45;
    color: #fff;
}
.btn-secondary-custom:hover {
    background: #4a3c38;
    color: #fff;
}

.calendar-container {
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 16px rgba(44,62,80,0.08);
    padding: 24px;
    margin: 20px 0;
}

.calendar-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24px;
}

.calendar-title {
    font-size: 1.5rem;
    font-weight: bold;
    color: #5c4a45;
}

.calendar-nav {
    display: flex;
    gap: 12px;
    align-items: center;
}

.calendar-nav-btn {
    background: #f8f9fa;
    border: 1px solid #dee2e6;
    border-radius: 6px;
    padding: 8px 16px;
    cursor: pointer;
    transition: all 0.2s;
}

.calendar-nav-btn:hover {
    background: #e9ecef;
}

.calendar-grid {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 1px;
    background: #dee2e6;
    border-radius: 8px;
    overflow: hidden;
}

.calendar-day-header {
    background: #6c757d;
    color: white;
    padding: 12px 8px;
    text-align: center;
    font-weight: 600;
    font-size: 0.9rem;
}

.calendar-day {
    background: white;
    min-height: 80px;
    padding: 8px;
    position: relative;
}

.calendar-day.other-month {
    background: #f8f9fa;
    color: #6c757d;
}

.calendar-day.today {
    background: #fff3cd;
    border: 2px solid #ffc107;
}

.day-number {
    font-weight: 600;
    margin-bottom: 4px;
}

.reservation-indicator {
    width: 100%;
    height: 4px;
    background: #e74c3c;
    border-radius: 2px;
    margin: 2px 0;
}

.reservation-tooltip {
    position: absolute;
    background: #333;
    color: white;
    padding: 8px;
    border-radius: 4px;
    font-size: 0.8rem;
    z-index: 1000;
    display: none;
    max-width: 200px;
    white-space: nowrap;
}

.calendar-day:hover .reservation-tooltip {
    display: block;
}

.new-reservation-btn {
    background: #a67c52;
    color: white;
    padding: 12px 24px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: background 0.2s;
    display: inline-block;
    margin-bottom: 20px;
}

.new-reservation-btn:hover {
    background: #8d6843;
    color: white;
}

.legend-container {
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 16px rgba(44,62,80,0.08);
    padding: 20px;
    margin-top: 20px;
}

.legend-title {
    font-size: 1.2rem;
    font-weight: bold;
    color: #5c4a45;
    margin-bottom: 16px;
}

.legend-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 12px;
}

.legend-item {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px;
    border-radius: 6px;
    background: #f8f9fa;
}

.legend-color {
    width: 20px;
    height: 4px;
    border-radius: 2px;
    flex-shrink: 0;
}

.legend-text {
    font-size: 0.9rem;
    color: #5c4a45;
    font-weight: 500;
}

.filters-container {
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 16px rgba(44,62,80,0.08);
    padding: 20px;
    margin-bottom: 20px;
}

.filters-title {
    font-size: 1.1rem;
    font-weight: bold;
    color: #5c4a45;
    margin-bottom: 16px;
}

.filters-form {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 16px;
    align-items: end;
}

.filter-group {
    display: flex;
    flex-direction: column;
    gap: 6px;
}

.filter-label {
    font-size: 0.9rem;
    font-weight: 600;
    color: #5c4a45;
}

.filter-input, .filter-select {
    padding: 8px 12px;
    border: 1px solid #dee2e6;
    border-radius: 6px;
    font-size: 0.9rem;
    transition: border-color 0.2s;
}

.filter-input:focus, .filter-select:focus {
    outline: none;
    border-color: #a67c52;
    box-shadow: 0 0 0 2px rgba(166, 124, 82, 0.1);
}

.filter-buttons {
    display: flex;
    gap: 12px;
    align-items: end;
}

.filter-btn {
    padding: 8px 16px;
    border: none;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
    text-decoration: none;
    display: inline-block;
}

.filter-btn-primary {
    background: #a67c52;
    color: white;
}

.filter-btn-primary:hover {
    background: #8d6843;
    color: white;
}

.filter-btn-secondary {
    background: #6c757d;
    color: white;
}

.filter-btn-secondary:hover {
    background: #5a6268;
    color: white;
}

.active-filter {
    background: #e9ecef;
    border: 1px solid #a67c52;
    color: #a67c52;
}

.filter-chip {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 4px 12px;
    background: #f8f9fa;
    border: 1px solid #dee2e6;
    border-radius: 20px;
    font-size: 0.8rem;
    color: #5c4a45;
    margin: 4px;
}

.filter-chip-remove {
    background: none;
    border: none;
    color: #6c757d;
    cursor: pointer;
    font-size: 1rem;
    padding: 0;
    width: 16px;
    height: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.filter-chip-remove:hover {
    color: #e74c3c;
}
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Calendario de Reservas</h1>
    <a asp-page="Create" class="new-reservation-btn">Nueva Reserva</a>
</div>

<!-- Filtros -->
<div class="filters-container">
    <div class="filters-title">Filtros de Búsqueda</div>
    <form method="get" class="filters-form">
        <div class="filter-group">
            <label class="filter-label">Cabaña</label>
            <select name="cabanaId" class="filter-select">
                <option value="">Todas las cabañas</option>
                @foreach (var cabana in Model.Cabanas)
                {
                    if (Model.CabanaIdFiltro == cabana.Id)
                    {
                        <option value="@cabana.Id" selected>@cabana.Nombre</option>
                    }
                    else
                    {
                        <option value="@cabana.Id">@cabana.Nombre</option>
                    }
                }
            </select>
        </div>
        
        <div class="filter-buttons">
            <button type="submit" class="filter-btn filter-btn-primary">Filtrar</button>
            <a href="?mes=@Model.MesActual&año=@Model.AñoActual" class="filter-btn filter-btn-secondary">Limpiar</a>
        </div>
    </form>
    
    <!-- Mostrar filtros activos -->
    @if (Model.CabanaIdFiltro.HasValue)
    {
        <div style="margin-top: 16px; padding-top: 16px; border-top: 1px solid #dee2e6;">
            <div style="font-size: 0.9rem; font-weight: 600; color: #5c4a45; margin-bottom: 8px;">Filtros activos:</div>
            <div>
                @{
                    var cabanaSeleccionada = Model.Cabanas.FirstOrDefault(c => c.Id == Model.CabanaIdFiltro);
                    if (cabanaSeleccionada != null)
                    {
                        <span class="filter-chip">
                            Cabaña: @cabanaSeleccionada.Nombre
                            <a href="@Model.ConstruirUrlConFiltros(Model.MesActual, Model.AñoActual, null)" 
                               class="filter-chip-remove">&times;</a>
                        </span>
                    }
                }
            </div>
        </div>
    }
</div>

<div class="calendar-container">
    <div class="calendar-header">
        <div class="calendar-title">@Model.NombreMes @Model.AñoActual</div>
        <div class="calendar-nav">
            <a href="@Model.ConstruirUrlConFiltros(Model.MesActual - 1, Model.MesActual == 1 ? Model.AñoActual - 1 : Model.AñoActual, Model.CabanaIdFiltro)" 
               class="calendar-nav-btn">‹ Anterior</a>
            <a href="@Model.ConstruirUrlConFiltros(DateTime.Now.Month, DateTime.Now.Year, Model.CabanaIdFiltro)" 
               class="calendar-nav-btn">Hoy</a>
            <a href="@Model.ConstruirUrlConFiltros(Model.MesActual + 1, Model.MesActual == 12 ? Model.AñoActual + 1 : Model.AñoActual, Model.CabanaIdFiltro)" 
               class="calendar-nav-btn">Siguiente ›</a>
        </div>
    </div>

    <div class="calendar-grid">
        <!-- Días de la semana -->
        <div class="calendar-day-header">DOM</div>
        <div class="calendar-day-header">LUN</div>
        <div class="calendar-day-header">MAR</div>
        <div class="calendar-day-header">MIÉ</div>
        <div class="calendar-day-header">JUE</div>
        <div class="calendar-day-header">VIE</div>
        <div class="calendar-day-header">SÁB</div>

        <!-- Días del mes -->
        @foreach (var dia in Model.DiasDelMes)
        {
            var reservasDelDia = Model.ObtenerReservasDelDia(dia);
            var esDiaActual = dia.Date == DateTime.Today;
            var esOtroMes = !Model.EsDiaDelMesActual(dia);
            
            <div class="calendar-day @(esOtroMes ? "other-month" : "") @(esDiaActual ? "today" : "")">
                <div class="day-number">@dia.Day</div>
                
                @if (reservasDelDia.Any())
                {
                    foreach (var reserva in reservasDelDia.Take(3))
                    {
                        <div class="reservation-indicator" 
                             style="background-color: @Model.ObtenerColorReserva(reserva);"
                             title="@reserva.Cabana?.Nombre - @reserva.Cliente?.Nombre @reserva.Cliente?.Apellido">
                        </div>
                    }
                    
                    @if (reservasDelDia.Count > 3)
                    {
                        <div class="reservation-indicator" style="background-color: #6c757d;" 
                             title="+@(reservasDelDia.Count - 3) más reservas">
                        </div>
                    }
                    
                    <div class="reservation-tooltip">
                        @foreach (var reserva in reservasDelDia.Take(5))
                        {
                            <div>@reserva.Cabana?.Nombre - @reserva.Cliente?.Nombre</div>
                        }
                        @if (reservasDelDia.Count > 5)
                        {
                            <div>... y @(reservasDelDia.Count - 5) más</div>
                        }
                    </div>
                }
            </div>
        }
    </div>
</div>

@if (Model.Cabanas.Any())
{
    <div class="legend-container">
        <div class="legend-title">Leyenda - Cabañas</div>
        <div class="legend-grid">
            @foreach (var cabana in Model.Cabanas)
            {
                var isActive = Model.CabanaIdFiltro == cabana.Id;
                <div class="legend-item @(isActive ? "active-filter" : "")">
                    <div class="legend-color" style="background-color: @Model.ObtenerColorCabana(cabana);"></div>
                    <div class="legend-text">@cabana.Nombre</div>
                </div>
            }
        </div>
    </div>
}
