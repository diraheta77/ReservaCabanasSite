@page
@model ReservaCabanasSite.Pages.Reservas.ConfirmarReservaModel
@{
    ViewData["Title"] = "Confirmar Reserva";
}

<h2>Confirmar Reserva</h2>

<div>
    <h4>Datos de la Reserva</h4>
    <p><strong>Cabaña:</strong> @Model.CabanaNombre</p>
    <p><strong>Desde:</strong> @Model.Reserva.FechaDesde.ToShortDateString()</p>
    <p><strong>Hasta:</strong> @Model.Reserva.FechaHasta.ToShortDateString()</p>
    <p><strong>Temporada:</strong> @Model.Reserva.Temporada</p>
    <p><strong>Cantidad de Personas:</strong> @Model.Reserva.CantidadPersonas</p>
</div>
<div>
    <h4>Datos del Cliente</h4>
    <p><strong>Nombre:</strong> @Model.Cliente.Nombre @Model.Cliente.Apellido</p>
    <p><strong>DNI:</strong> @Model.Cliente.Dni</p>
    <p><strong>Email:</strong> @Model.Cliente.Email</p>
</div>

<form method="post">
    <input type="hidden" name="ReservaId" value="@Model.Reserva.Id" />
    <input type="hidden" name="ClienteId" value="@Model.Cliente.Id" />
    <div class="form-group">
        <label>Importe Total</label>
        <input asp-for="Reserva.ImporteTotal" class="form-control" />
    </div>
    <div class="form-group">
        <label>Seña a pagar</label>
        <input asp-for="Reserva.Sena" class="form-control" />
    </div>
    <div class="form-group">
        <label>Saldo a pagar</label>
        <input asp-for="Reserva.Saldo" class="form-control" />
    </div>
    <div class="form-group">
        <label>Medio de Pago</label>
        <select asp-for="Reserva.MedioPago" class="form-control">
            <option>Efectivo</option>
            <option>Transferencia</option>
            <option>Tarjeta</option>
        </select>
    </div>
    <div class="form-group">
        <label>Observaciones</label>
        <textarea asp-for="Reserva.Observaciones" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Confirmar Reserva</button>
</form>