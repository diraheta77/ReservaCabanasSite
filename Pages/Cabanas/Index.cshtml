@page
@model ReservaCabanasSite.Pages.Cabanas.IndexModel
@{
    ViewData["Title"] = "Cabañas";
}

<style>
.cabana-header-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 24px;
}
.cabana-header-row h2 {
    margin: 0;
    font-size: 2.5rem;
    font-weight: 700;
    color: #4e3d2c;
}
.cabana-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 32px;
    margin-top: 16px;
}
.cabana-card {
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 2px 16px rgba(44,62,80,0.10);
    padding: 18px 18px 14px 18px;
    cursor: pointer;
    transition: box-shadow 0.2s, transform 0.2s;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.cabana-card:hover {
    box-shadow: 0 6px 24px rgba(44,62,80,0.16);
    transform: translateY(-4px) scale(1.03);
}
.cabana-card-img {
    width: 100%;
    height: 170px;
    background: #f5f5f5;
    border-radius: 10px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 12px;
}
.cabana-card-img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 10px;
}
.cabana-card-name {
    font-size: 1.2rem;
    font-weight: 600;
    color: #6d4c2b;
    text-align: center;
    margin-bottom: 4px;
}
</style>

<div class="cabana-header-row">
    @* <h2>Cabañas</h2> *@
    @if (Model.EsAdministrador)
    {
        <a asp-page="Create" class="btn btn-info" style="font-weight:600;">Nueva Cabaña</a>
    }
</div>
<div class="cabana-grid">
@foreach (var cabana in Model.Cabanas)
{
    <div class="cabana-card" onclick="location.href='@Url.Page("Edit", new { id = cabana.Id })'">
        <div class="cabana-card-img">
            @if (cabana.Imagenes != null && cabana.Imagenes.Any())
            {
                <img src="@cabana.Imagenes.First().ImagenUrl" alt="Imagen de @cabana.Nombre" />
            }
            else
            {
                <span style="color:#bbb;">Sin imagen</span>
            }
        </div>
        <div class="cabana-card-name">@cabana.Nombre</div>
    </div>
}
</div>