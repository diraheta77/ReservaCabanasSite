@page
@model ReservaCabanasSite.Pages.Cabanas.IndexModel
@{
    ViewData["Title"] = "Cabañas";
}

<style>
.cabana-header-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 24px;
}
.cabana-header-row h2 {
    margin: 0;
    font-size: 2.5rem;
    font-weight: 700;
    color: #4e3d2c;
}
.cabana-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 32px;
    margin-top: 16px;
}
.cabana-card {
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 2px 16px rgba(44,62,80,0.10);
    padding: 18px 18px 14px 18px;
    cursor: pointer;
    transition: box-shadow 0.2s, transform 0.2s;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
}
.cabana-card:hover {
    box-shadow: 0 6px 24px rgba(44,62,80,0.16);
    transform: translateY(-4px) scale(1.03);
}
.cabana-card.inactiva {
    opacity: 0.6;
    background: #f8f8f8;
}
.cabana-estado {
    position: absolute;
    top: 10px;
    right: 10px;
    padding: 4px 12px;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
}
.cabana-estado.activa {
    background: #d4edda;
    color: #155724;
}
.cabana-estado.inactiva {
    background: #f8d7da;
    color: #721c24;
}
.cabana-card-img {
    width: 100%;
    height: 170px;
    background: #f5f5f5;
    border-radius: 10px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 12px;
}
.cabana-card-img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 10px;
}
.cabana-card-name {
    font-size: 1.2rem;
    font-weight: 600;
    color: #483d3d;
    text-align: center;
    margin-bottom: 4px;
}
.placeholder-img {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
    color: #999;
}
.placeholder-img i {
    font-size: 3rem;
    margin-bottom: 8px;
    color: #bbb;
}
.placeholder-img span {
    font-size: 0.9rem;
    font-weight: 500;
    color: #999;
}
</style>

<div class="cabana-header-row">
    @* <h2>Cabañas</h2> *@
    @if (Model.EsAdministrador)
    {
        <a asp-page="Create" class="btn btn-info" style="font-weight:600; background:#0097b2; border-color:#0097b2;">Nueva Cabaña</a>
    }
</div>
<div class="cabana-grid">
@foreach (var cabana in Model.Cabanas)
{
    <div class="cabana-card @(cabana.Activa ? "" : "inactiva")" onclick="location.href='@Url.Page("Edit", new { id = cabana.Id })'">
        <span class="cabana-estado @(cabana.Activa ? "activa" : "inactiva")">
            @(cabana.Activa ? "Activa" : "Inactiva")
        </span>
        <div class="cabana-card-img">
            @if (cabana.Imagenes != null && cabana.Imagenes.Any())
            {
                <img src="@cabana.Imagenes.First().ImagenUrl"
                     alt="Imagen de @cabana.Nombre"
                     onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                <div class="placeholder-img" style="display:none;">
                    <i class="fa fa-home"></i>
                    <span>Sin imagen</span>
                </div>
            }
            else
            {
                <div class="placeholder-img">
                    <i class="fa fa-home"></i>
                    <span>Sin imagen</span>
                </div>
            }
        </div>
        <div class="cabana-card-name">@cabana.Nombre</div>
    </div>
}
</div>