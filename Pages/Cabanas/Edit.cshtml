@page "{id:int}"
@model ReservaCabanasSite.Pages.Cabanas.EditModel
@{
    ViewData["Title"] = "Editar Cabaña";
}

<style>
.cabana-form-main-row {
    display: flex;
    flex-wrap: wrap;
    gap: 32px;
    justify-content: center;
    align-items: flex-start;
    margin: 40px auto;
    max-width: 900px;
    width: 100%;
    box-sizing: border-box;
}
.cabana-card {
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 2px 16px rgba(44,62,80,0.08);
    padding: 32px 28px 28px 28px;
    min-width: 320px;
    max-width: 400px;
    width: 100%;
    margin-bottom: 24px;
    box-sizing: border-box;
}
.cabana-form-title {
    font-size: 1.3rem;
    font-weight: bold;
    margin-bottom: 18px;
    color: #5c4a45;
}
.cabana-form-fields label {
    font-weight: 600;
    margin-bottom: 2px;
}
.cabana-form-input,
.cabana-form-textarea {
    width: 100%;
    padding: 7px 10px;
    border-radius: 6px;
    border: 1px solid #ccc;
    background: #f7f7f7;
    margin-bottom: 12px;
}
.cabana-form-textarea {
    min-height: 60px;
    resize: vertical;
}
.cabana-form-buttons {
    display: flex;
    gap: 16px;
    margin-top: 18px;
}
.cabana-btn {
    padding: 8px 22px;
    border-radius: 6px;
    border: none;
    background: #0097b2;
    color: #fff;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    transition: background 0.2s;
}
.cabana-btn:hover {
    background: #00798e;
}
.cabana-form-img {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.cabana-img-preview-box {
    width: 260px;
    height: 180px;
    background: #f0f0f0;
    border: 1.5px dashed #bdbdbd;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    margin-bottom: 12px;
    position: relative;
}
.cabana-img-preview-box img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
}
.cabana-img-carousel-controls {
    display: flex;
    justify-content: center;
    gap: 10px;
}
.cabana-img-carousel-btn {
    background: #e0e0e0;
    border: none;
    border-radius: 50%;
    width: 36px;
    height: 36px;
    font-size: 1.2rem;
    color: #5c4a45;
    cursor: pointer;
    transition: background 0.2s;
}
.cabana-img-carousel-btn:disabled {
    background: #f5f5f5;
    color: #bdbdbd;
    cursor: not-allowed;
}

/* Toggle Switch Styles */
.toggle-switch {
    position: relative;
    display: inline-block;
    width: 50px;
    height: 24px;
}

.toggle-switch input {
    opacity: 0;
    width: 0;
    height: 0;
}

.toggle-slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #ccc;
    transition: .3s;
    border-radius: 24px;
}

.toggle-slider:before {
    position: absolute;
    content: "";
    height: 18px;
    width: 18px;
    left: 3px;
    bottom: 3px;
    background-color: white;
    transition: .3s;
    border-radius: 50%;
}

input:checked + .toggle-slider {
    background-color: #27ae60;
}

input:checked + .toggle-slider:before {
    transform: translateX(26px);
}

/* Modal Styles */
.modal-overlay {
    display: none;
    position: fixed;
    z-index: 9999;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    animation: fadeIn 0.3s;
}

.modal-content-custom {
    background-color: #fefefe;
    margin: 15% auto;
    padding: 0;
    border-radius: 12px;
    width: 90%;
    max-width: 450px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    animation: slideDown 0.3s;
}

.modal-header-custom {
    padding: 20px 24px;
    border-bottom: 1px solid #e9ecef;
    display: flex;
    align-items: center;
    gap: 12px;
}

.modal-icon {
    font-size: 2rem;
}

.modal-title-custom {
    margin: 0;
    font-size: 1.3rem;
    color: #5c4a45;
    font-weight: 600;
}

.modal-body-custom {
    padding: 24px;
    font-size: 1rem;
    color: #666;
    line-height: 1.6;
}

.modal-footer-custom {
    padding: 16px 24px;
    border-top: 1px solid #e9ecef;
    display: flex;
    gap: 12px;
    justify-content: flex-end;
}

.modal-btn {
    padding: 10px 20px;
    border: none;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
    font-size: 0.95rem;
}

.modal-btn-cancel {
    background: #6c757d;
    color: white;
}

.modal-btn-cancel:hover {
    background: #5a6268;
}

.modal-btn-confirm {
    background: #0097b2;
    color: white;
}

.modal-btn-confirm:hover {
    background: #00798e;
}

.modal-btn-danger {
    background: #dc3545;
    color: white;
}

.modal-btn-danger:hover {
    background: #c82333;
}

@@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

@@keyframes slideDown {
    from {
        transform: translateY(-50px);
        opacity: 0;
    }
    to {
        transform: translateY(0);
        opacity: 1;
    }
}

/* Responsive styles */
@@media (max-width: 1000px) {
    .cabana-form-main-row {
        flex-direction: column;
        align-items: center;
        max-width: 98vw;
        padding: 0 8px;
    }
    .cabana-card {
        max-width: 98vw;
        min-width: unset;
    }
}
</style>

<div class="cabana-form-main-row">
    <!-- Vista previa de imagen -->
    <div class="cabana-card cabana-form-img">
        <div class="cabana-img-preview-box" id="imgPreviewBox">
            <span id="imgPreviewPlaceholder" style="color:#aaa;">Vista previa</span>
        </div>
    </div>
    <!-- Formulario -->
    <div class="cabana-card">
        <div class="cabana-form-title">EDITAR CABAÑA</div>
        <form method="post" enctype="multipart/form-data">
            <div class="cabana-form-fields">
                <input type="hidden" asp-for="Cabana.Id" />
                <label class="cabana-form-label">Número</label>
                <input class="cabana-form-input" value="@Model.Cabana.Id" disabled />

                <label asp-for="Cabana.Nombre" class="cabana-form-label"></label>
                <input asp-for="Cabana.Nombre" class="cabana-form-input" />

                <label asp-for="Cabana.Capacidad" class="cabana-form-label">Cantidad de Huéspedes</label>
                <input asp-for="Cabana.Capacidad" class="cabana-form-input" type="number" min="1" />

                <label asp-for="Cabana.CamasMatrimonial" class="cabana-form-label">Camas Matrimonial</label>
                <input asp-for="Cabana.CamasMatrimonial" class="cabana-form-input" type="number" min="0" />

                <label asp-for="Cabana.CamasIndividuales" class="cabana-form-label">Camas Individuales</label>
                <input asp-for="Cabana.CamasIndividuales" class="cabana-form-input" type="number" min="0" />

                <label asp-for="Cabana.Observaciones" class="cabana-form-label"></label>
                <textarea asp-for="Cabana.Observaciones" class="cabana-form-textarea"></textarea>

                <label class="cabana-form-label">Cambiar Imagen</label>
                <input type="file" name="Imagenes" id="inputImagenes" class="form-control" style="background:#e5e5e5; border:none;" accept="image/*" />

                <div class="form-group" style="margin-top: 15px;">
                    <div style="display: flex; align-items: center; gap: 12px;">
                        <label class="toggle-switch">
                            <input asp-for="Cabana.Activa" type="checkbox" id="checkboxActiva" />
                            <span class="toggle-slider"></span>
                        </label>
                        <label for="checkboxActiva" style="margin: 0; font-weight: 600; color: #5c4a45; cursor: pointer;">
                            <span id="estadoTexto">@(Model.Cabana.Activa ? "Cabaña Activa" : "Cabaña Inactiva")</span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="cabana-form-buttons">
                <a asp-page="Index" class="cabana-btn" style="background:#0097b2;">Cancelar</a>
                <button type="submit" class="cabana-btn">Guardar</button>
            </div>
        </form>
    </div>
</div>

<!-- Modal de confirmación -->
<div id="confirmModal" class="modal-overlay">
    <div class="modal-content-custom">
        <div class="modal-header-custom">
            <span class="modal-icon" id="modalIcon">⚠️</span>
            <h3 class="modal-title-custom" id="modalTitle">Confirmar acción</h3>
        </div>
        <div class="modal-body-custom" id="modalMessage">
            ¿Está seguro de que desea realizar esta acción?
        </div>
        <div class="modal-footer-custom">
            <button class="modal-btn modal-btn-cancel" id="btnCancelar">Cancelar</button>
            <button class="modal-btn modal-btn-confirm" id="btnConfirmar">Confirmar</button>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Mostrar imagen actual de la cabaña
    const previewBox = document.getElementById('imgPreviewBox');
    const placeholder = document.getElementById('imgPreviewPlaceholder');

    @if (Model.Cabana.Imagenes != null && Model.Cabana.Imagenes.Any())
    {
        var primeraImagen = Model.Cabana.Imagenes.First();
        var imagenUrl = !string.IsNullOrEmpty(primeraImagen.ImagenUrl)
            ? primeraImagen.ImagenUrl
            : $"/api/imagen/cabana/{primeraImagen.Id}";
        @: previewBox.innerHTML = '';
        @: const imgActual = document.createElement('img');
        @: imgActual.src = '@imagenUrl';
        @: previewBox.appendChild(imgActual);
    }

    // Al seleccionar nueva imagen, mostrarla en la vista previa
    document.getElementById('inputImagenes').addEventListener('change', function (evt) {
        previewBox.innerHTML = '';

        if (this.files && this.files[0]) {
            const img = document.createElement('img');
            img.src = URL.createObjectURL(this.files[0]);
            previewBox.appendChild(img);
        } else {
            placeholder.style.display = '';
            previewBox.appendChild(placeholder);
        }
    });

    // Modal de confirmación
    const modal = document.getElementById('confirmModal');
    const modalIcon = document.getElementById('modalIcon');
    const modalTitle = document.getElementById('modalTitle');
    const modalMessage = document.getElementById('modalMessage');
    const btnCancelar = document.getElementById('btnCancelar');
    const btnConfirmar = document.getElementById('btnConfirmar');
    const checkboxActiva = document.getElementById('checkboxActiva');
    const estadoTexto = document.getElementById('estadoTexto');

    let estadoAnterior = checkboxActiva.checked;
    let confirmacionPendiente = false;

    // Actualizar texto del estado
    function actualizarTextoEstado() {
        estadoTexto.textContent = checkboxActiva.checked ? 'Cabaña Activa' : 'Cabaña Inactiva';
    }

    // Mostrar modal
    function mostrarModal(activar) {
        const accion = activar ? 'activar' : 'desactivar';
        const icon = activar ? '✅' : '⚠️';
        const titulo = activar ? 'Activar Cabaña' : 'Desactivar Cabaña';
        const mensaje = `¿Está seguro de que desea ${accion} esta cabaña?`;

        modalIcon.textContent = icon;
        modalTitle.textContent = titulo;
        modalMessage.textContent = mensaje;

        // Cambiar color del botón según la acción
        btnConfirmar.className = activar ? 'modal-btn modal-btn-confirm' : 'modal-btn modal-btn-danger';

        modal.style.display = 'block';
    }

    // Cerrar modal
    function cerrarModal() {
        modal.style.display = 'none';
    }

    // Evento al cambiar el toggle
    checkboxActiva.addEventListener('change', function(e) {
        if (!confirmacionPendiente) {
            e.preventDefault();
            const nuevoEstado = this.checked;

            // Revertir temporalmente para esperar confirmación
            this.checked = estadoAnterior;

            // Mostrar modal
            mostrarModal(nuevoEstado);
        }
    });

    // Confirmar cambio
    btnConfirmar.addEventListener('click', function() {
        confirmacionPendiente = true;
        checkboxActiva.checked = !estadoAnterior;
        estadoAnterior = checkboxActiva.checked;
        actualizarTextoEstado();
        cerrarModal();
        setTimeout(() => { confirmacionPendiente = false; }, 100);
    });

    // Cancelar cambio
    btnCancelar.addEventListener('click', function() {
        checkboxActiva.checked = estadoAnterior;
        cerrarModal();
    });

    // Cerrar modal al hacer clic fuera
    window.addEventListener('click', function(event) {
        if (event.target === modal) {
            checkboxActiva.checked = estadoAnterior;
            cerrarModal();
        }
    });

    // Inicializar texto del estado
    actualizarTextoEstado();
</script>
}